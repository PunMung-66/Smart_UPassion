{
  "openapi": "3.0.0",
  "info": {
    "title": "Video Scraper API",
    "version": "1.0.0",
    "description": "Scrapes facebook reel video src URLs from a given page using Puppeteer"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://your-production-url.com"
    }
  ],
  "paths": {
    "/api/scrape-video": {
      "get": {
        "summary": "Scrape video srcs",
        "description": "Scrapes video src URLs from a page",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "URL to scrape",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of video src URLs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "videoSrcs": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}
